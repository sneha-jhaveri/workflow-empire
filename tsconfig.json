{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@nodes/*": ["packages/nodes/*"],
      "@ui/*": ["packages/ui-components/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./apps/backend/tests/types"],
    "types": ["vitest"],
    "composite": true
  },
  "include": ["apps", "packages"]
}
